    // Add
    public void add(View v)
    {
        // To allow for obtaining second number then after second number obtain
        // perform calculation

        if (activation == 0)
        {
            // Activating second number
            activation = activation + 1;
            adding = true;
        }
        else
        {
            // Error - Unless you want multi operational calculations
        }
    }

    // Subtract
    public void subtract(View v)
    {
        if (activation == 0)
        {
            // Activating second number
            activation = activation + 1;
            subtraction = true;
        }
        else
        {
            // So code does work where it increments variable to another value and keeps it
            // throughout the program

            // Error - Unless you want multi operational calculations
        }
    }

    // Multiply
    public void multiply(View v)
    {
        if (activation == 0)
        {
            // Activating second number
            activation = activation + 1;
            multiplication = true;
        }
        else
        {
            // Error - Unless you want multi operational calculations
        }
    }

    //Divide
    public void divide(View v)
    {
        if (activation == 0)
        {
            // Activating second number
            activation = activation + 1;
            division = true;
        }
        else
        {
            // Error - Unless you want multi operational calculations
        }
    }

    public void equals(View v)
    {
        if (adding)
        {
            // Compute addition
            calculationOfFirstAndSecondInteger = (FirstNumber + SecondNumber);

            // Displaying result value from calculation
            textView.setText("" + calculationOfFirstAndSecondInteger);
        }
        else if(subtraction)
        {
            // Compute subtraction
            calculationOfFirstAndSecondInteger = (FirstNumber - SecondNumber);

            // Displaying result value from calculation
            textView.setText("" + calculationOfFirstAndSecondInteger);
        }
        else if(multiplication)
        {
            // Compute multiplication
            calculationOfFirstAndSecondInteger = (FirstNumber * SecondNumber);

            // Displaying result value from calculation
            textView.setText("" + calculationOfFirstAndSecondInteger);
        }
        else if(division)
        {
            // Compute divison
            calculationOfFirstAndSecondInteger = (FirstNumber / SecondNumber);

            // Displaying result value from calculation
            textView.setText("" + calculationOfFirstAndSecondInteger);
        }
    }

    // Clear
    public void clear(View v)
    {
        // Display Zero and reset variables

        // Displaying Zero to textview
        textView.setText("0");

        // Resetting both variables to zero
        firstNumber  = 0;
        secondNumber = 0;

        // Resetting activation number
        activation = 0;
    }
}
