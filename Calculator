package com.example.android.calculator;

import android.content.DialogInterface;
import android.support.v7.app.AppCompatActivity;
import android.os.Bundle;
import android.view.View;
import android.widget.Button;
import android.widget.TextView;

import org.w3c.dom.Text;

// Check out what operation the user pressed by referencing the XML through if statements
// then call the appropriate method to do the necessary modifications

// https://www.sitepoint.com/community/t/concatenate-4-numbers-into-one-number/5465/4

// If statements that reference the XML ID's to locate what button was pressed
// as we check if the button one was clicked then concatenate the value One with it

// What I could do is seperate each button into each seperate method and then
// concatenate the result to it

// Need to manage textViews as well

public class MainActivity extends AppCompatActivity
{
    // Total sum at current instance
    private int firstNumber  = 0;
    private int secondNumber = 0;

    // Activating Second Number
    private int activation = 0;

    // Store resultValue
    int resultValue;

    // temporary storage
    int result;

    // Operation Performed
    boolean adding         = false;
    boolean subtraction    = false;
    boolean multiplication = false;
    boolean division       = false;

    // Creating calculator buttons
    Button numberOne;
    Button numberTwo;
    Button numberThree;
    Button numberFour;
    Button numberFive;
    Button numberSix;
    Button numberSeven;
    Button numberEight;
    Button numberNine;

    // Creating TextView to display data
    TextView textView;

    // Numbers to be added
    int FirstNumber;
    int SecondNumber;

   // Sum of first and second integer
    int calculationOfFirstAndSecondInteger;

    // When you initialize the overall activity
    @Override
    protected void onCreate(Bundle savedInstanceState)
    {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_main);

        // Initializing Buttons
        numberOne   =   (Button)findViewById(R.id.Button1);
        numberTwo   =   (Button)findViewById(R.id.Button2);
        numberThree =   (Button)findViewById(R.id.Button3);
        numberFour  =   (Button)findViewById(R.id.Button4);
        numberFive  =   (Button)findViewById(R.id.Button5);
        numberSix   =   (Button)findViewById(R.id.Button6);
        numberSeven =   (Button)findViewById(R.id.Button7);
        numberEight =   (Button)findViewById(R.id.Button8);
        numberNine  =   (Button)findViewById(R.id.Button9);

       // Getting TextView that was initially created
        textView = (TextView)findViewById(R.id.textView);
    }

    // Concatenate One - "1" is pressed
    public void concatenateOne(View v)
    {
        // Concatenate the result of sum to the number clicked
        if (activation == 0)
        {
             FirstNumber =  1;
            textView.setText("" + FirstNumber);
        }
        else
        {
             SecondNumber = 1;
            textView.setText("" + SecondNumber);
        }
    }

    // Concatenate two - "2" is pressed
    public void concatenateTwo(View v)
    {
        // Concatenate the result of sum to the number clicked
