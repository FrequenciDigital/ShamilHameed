package com.example.android.calculator;

import android.content.DialogInterface;
import android.support.v7.app.AppCompatActivity;
import android.os.Bundle;
import android.view.View;
import android.widget.Button;
import android.widget.TextView;

import org.w3c.dom.Text;

// Check out what operation the user pressed by referencing the XML through if statements
// then call the appropriate method to do the necessary modifications

// https://www.sitepoint.com/community/t/concatenate-4-numbers-into-one-number/5465/4

// If statements that reference the XML ID's to locate what button was pressed
// as we check if the button one was clicked then concatenate the value One with it

// What I could do is seperate each button into each seperate method and then
// concatenate the result to it

// Need to manage textViews as well

public class MainActivity extends AppCompatActivity
{
    // Numbers to be added

    // Initialize to remove "null"
    private String FirstNumber  = "";
    private String SecondNumber = "";

    // Numbers as integers after respective calculations
    private double firstNumber;
    private double secondNumber;

    // Activating Second Number
    private double activation = 0;

    // resultValue of calculation
    private double resultValue;

    // Operation Performed
    boolean adding         = false;
    boolean subtraction    = false;
    boolean multiplication = false;
    boolean division       = false;

    // Creating calculator buttons
    Button numberOne;
    Button numberTwo;
    Button numberThree;
    Button numberFour;
    Button numberFive;
    Button numberSix;
    Button numberSeven;
    Button numberEight;
    Button numberNine;

    // Creating TextView to display data
    TextView textView;

    // When you initialize the overall activity
    @Override
    protected void onCreate(Bundle savedInstanceState)
    {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_main);

        // Initializing Buttons
        numberOne   =   (Button)findViewById(R.id.Button1);
        numberTwo   =   (Button)findViewById(R.id.Button2);
        numberThree =   (Button)findViewById(R.id.Button3);
        numberFour  =   (Button)findViewById(R.id.Button4);
        numberFive  =   (Button)findViewById(R.id.Button5);
        numberSix   =   (Button)findViewById(R.id.Button6);
        numberSeven =   (Button)findViewById(R.id.Button7);
        numberEight =   (Button)findViewById(R.id.Button8);
        numberNine  =   (Button)findViewById(R.id.Button9);

       // Getting TextView that was initially created
        textView = (TextView)findViewById(R.id.textView);
    }

    // Concatenate One - "1" is pressed
    public void concatenateOne(View v)
    {
        // Concatenate the result of sum to the number clicked
        if (activation == 0)
        {
            // Need to concatenate number to string
            FirstNumber += 1;
            textView.setText(FirstNumber);
        }
        else
        {
            SecondNumber += 1;
            textView.setText(SecondNumber);
        }
    }

    // Concatenate two - "2" is pressed
    public void concatenateTwo(View v)
    {
        // Concatenate the result of sum to the number clicked
        if (activation == 0)
        {
            FirstNumber += 2;
            textView.setText(FirstNumber);
        }
        else
        {
            SecondNumber += 2;
            textView.setText(SecondNumber);
        }
    }

    // Concatenate three - "3" is pressed
    public void concatenateThree(View v)
    {
        // Concatenate the result of sum to the number clicked
        if (activation == 0)
        {
            FirstNumber += 3;
            textView.setText("" + FirstNumber);
        }
        else
        {
            SecondNumber += 3;
            textView.setText("" + SecondNumber);
        }
    }

    // Concatenate four - "4" is pressed
    public void concatenateFour(View v)
    {
        // Concatenate the result of sum to the number clicked
        if (activation == 0)
        {
            FirstNumber += 4;
            textView.setText("" + FirstNumber);
        }
        else
        {
            SecondNumber += 4;
            textView.setText("" + SecondNumber);
        }
    }

    // Concatenate five - "5" is pressed
    public void concatenateFive(View v)
    {
        // Concatenate the result of sum to the number clicked
        if (activation == 0)
        {
            FirstNumber += 5;
            textView.setText("" + FirstNumber);
        }
        else
        {
            SecondNumber += 5;
            textView.setText("" + SecondNumber);
        }
    }

    // Concatenate six - "6" is pressed
    public void concatenateSix(View v)
    {
        // Concatenate the result of sum to the number clicked
        if (activation == 0)
        {
            FirstNumber += 6;
            textView.setText("" + FirstNumber);
        }
        else
        {
            SecondNumber += 6;
            textView.setText("" + SecondNumber);
        }
    }

    // Concatenate seven - "7" is pressed
    public void concatenateSeven(View v)
    {
        // Concatenate the result of sum to the number clicked
        if (activation == 0)
        {
            FirstNumber += 7;
            textView.setText("" + FirstNumber);
        }
        else
        {
            SecondNumber += 7;
            textView.setText("" + SecondNumber);
        }
    }

    // Concatenate eight - "8" is pressed
    public void concatenateEight(View v)
    {
        // Concatenate the result of sum to the number clicked
        if (activation == 0)
        {
            FirstNumber += 8;
            textView.setText("" + FirstNumber);
        }
        else
        {
            SecondNumber += 8;
            textView.setText("" + SecondNumber);
        }
    }

    // Concatenate nine - "9" is pressed
    public void concatenateNine(View v)
    {
        // Concatenate the result of sum to the number clicked
        if (activation == 0)
        {
            FirstNumber += 9;
            textView.setText("" + FirstNumber);
        }
        else
        {
            SecondNumber += 9;
            textView.setText("" + SecondNumber);
        }
    }

    // Concatenate zero - "0" is pressed
    public void concatenateZero(View v)
    {
        // Concatenate the result of sum to the number clicked
        if (activation == 0)
        {
            FirstNumber += 0;
            textView.setText("" + FirstNumber);
        }
        else
        {
            SecondNumber += 0;
            textView.setText("" + SecondNumber);
        }
    }

    // Add decimal point
    public void decimal(View v)
    {
        if (activation == 0)
        {
            FirstNumber  += ".";
            textView.setText(FirstNumber);
        }
        else
        {
            SecondNumber += ".";
            textView.setText(SecondNumber);
        }
    }

    // Add
    public void add(View v)
    {
        // To allow for obtaining second number then after second number obtain
        // perform calculation

        if (activation == 0)
        {
            // Activating second number
            activation = activation + 1;
            adding = true;
        }
        else
        {
            // Error - Unless you want multi operational calculations
        }
    }

    // Subtract
    public void subtract(View v)
    {
        if (activation == 0)
        {
            // Activating second number
            activation = activation + 1;
            subtraction = true;
        }
        else
        {
            // So code does work where it increments variable to another value and keeps it
            // throughout the program

            // Error - Unless you want multi operational calculations
        }
    }

    // Multiply
    public void multiply(View v)
    {
        if (activation == 0)
        {
            // Activating second number
            activation = activation + 1;
            multiplication = true;
        }
        else
        {
            // Error - Unless you want multi operational calculations
        }
    }

    //Divide
    public void divide(View v)
    {
        if (activation == 0)
        {
            // Activating second number
            activation = activation + 1;
            division = true;
        }
        else
        {
            // Error - Unless you want multi operational calculations
        }
    }

    public void equals(View v)
    {
        if (adding)
        {
            // Convert String to Integer before calculation by parsing

            firstNumber  = Double.parseDouble(FirstNumber);
            secondNumber = Double.parseDouble(SecondNumber);

            // Compute addition
            resultValue = (firstNumber + secondNumber);

            // Displaying result value from calculation by converting back to string
            textView.setText("" + resultValue);
        }

        else if(subtraction)
        {
            // Convert String to Integer before calculation by converting back to string
            // through concatenation
            firstNumber  = Double.parseDouble(FirstNumber);
            secondNumber = Double.parseDouble(SecondNumber);

            // Compute subtraction
            resultValue = (firstNumber - secondNumber);

            // Displaying result value from calculation by converting back to string
            textView.setText("" + resultValue);
        }

        else if(multiplication)
        {
            // Convert String to Integer before calculation by converting back to string
            // through concatenation
            firstNumber  = Double.parseDouble(FirstNumber);
            secondNumber = Double.parseDouble(SecondNumber);

            // Compute multiplication
            resultValue = (firstNumber * secondNumber);

            // Displaying result value from calculation by converting back to string
            // through concatenation
            textView.setText("" + resultValue);
        }

        else if(division)
        {
            // Convert String to Integer before calculation by converting back to string
            // through concatenation
            firstNumber  = Double.parseDouble(FirstNumber);
            secondNumber = Double.parseDouble(SecondNumber);

            // Compute divison
            resultValue = (firstNumber / secondNumber);

            // Displaying result value from calculation by converting back to string
            // through concatenation
            textView.setText("" + resultValue);
        }

        // Resetting all of the values so that you don't have to click AC before next computation

        // Resetting both variables back to empty
        FirstNumber  = "";
        SecondNumber = "";

        // Resetting both variables back to empty
        firstNumber  = 0;
        secondNumber = 0;

        // Resetting calculation number
        resultValue = 0;

        // Resetting activation number
        activation = 0;

        // Resetting boolean variables back to false
        adding         = false;
        subtraction    = false;
        multiplication = false;
        division       = false;
    }

    // Clear
    public void clear(View v)
    {
        // Display Zero and reset all variables

        // Displaying Zero to textview
        textView.setText("0");

        // Resetting both variables back to empty
        FirstNumber  = "";
        SecondNumber = "";

        // Resetting calculation number
        resultValue = 0;

        // Resetting activation number
        activation = 0;

        // Resetting boolean variables back to false
        adding         = false;
        subtraction    = false;
        multiplication = false;
        division       = false;
    }
}
